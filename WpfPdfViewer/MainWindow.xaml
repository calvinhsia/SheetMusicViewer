<Window x:Class="WpfPdfViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPdfViewer"
        mc:Ignorable="d">
    <Grid Margin="0,11,0,-11">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,2,0,4">
            <Button x:Name="btnPrev" Content="&lt;" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Click="BtnPrevNext_Click"/>
            <TextBox x:Name="txtPageNo" HorizontalAlignment="Left" Margin="5,0,5,0" TextWrapping="Wrap" Text="{Binding CurrentPageNumber}" VerticalAlignment="Top" />
            <Button x:Name="btnNext" Content="&gt;" HorizontalAlignment="Left" VerticalAlignment="Top" Click="BtnPrevNext_Click"/>
            <Label Content="/" HorizontalAlignment="Left" Margin="10,0,10,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtMaxPageNo" HorizontalAlignment="Left" Margin="2,0,0,0" TextWrapping="Wrap" Text="{Binding MaxPageNumber}" VerticalAlignment="Top" />
        </StackPanel>
        <DockPanel Grid.Row="1" Name="dpPage">
        </DockPanel>


    </Grid>
</Window>

<Window x:Class="WpfPdfViewer.PdfViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPdfViewer"
        mc:Ignorable="d"
        Title="{Binding Title}"
        >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,2,0,4">
            <Button  Content="_BookMarks" ToolTip="Add current to BookMark/Favorites or choose another BookMark/Favorite" HorizontalAlignment="Left" Margin="10,-5,0,0" VerticalAlignment="Top" Click="BtnBookMarks_Click"/>
            <Button x:Name="btnPrev" Content="&lt;" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Top" Click="BtnPrevNext_Click"/>
            <TextBox x:Name="txtPageNo" HorizontalAlignment="Left" Margin="5,0,5,0" TextWrapping="Wrap" Text="{Binding CurrentPageNumber}" VerticalAlignment="Top" LostFocus="TxtPageNo_LostFocus" />
            <Button x:Name="btnNext" Content="&gt;" HorizontalAlignment="Left" VerticalAlignment="Top" Click="BtnPrevNext_Click"/>
            <Label Content="/" HorizontalAlignment="Left" Margin="10,0,10,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtMaxPageNo" HorizontalAlignment="Left" Margin="2,0,0,0" TextWrapping="Wrap" Text="{Binding MaxPageNumber}" VerticalAlignment="Top" IsReadOnly="True" />
            <Slider x:Name="slider" Width="200" Value="{Binding SliderValue}" Maximum="100" ValueChanged="Slider_ValueChanged" ></Slider>
            <CheckBox ToolTip="Show 1 or 2 pages at a a time" IsChecked="{Binding Show2Pages}">Show2Pages</CheckBox>
            <Button Content="_Chooser" HorizontalAlignment="Right" Margin="10,0,00,0" VerticalAlignment="Top" ToolTip="Open another document"  Click="BtnChooser_Click" Height="22"/>
        </StackPanel>
        <DockPanel Grid.Row="1" Name="dpPage" Background="#FF190808" MouseDown="DpPage_MouseDown">
        </DockPanel>
    </Grid>
</Window>

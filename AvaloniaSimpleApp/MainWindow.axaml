<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaSimpleApp.MainWindow"
        Title="Avalonia PDF Stress Test"
        WindowState="Maximized">
    
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Spacing="10">
            <Button x:Name="StartButton"
                    Content="Start Stress Test"
                    Padding="15,8"
                    FontSize="14"
                    Click="OnStartButtonClick"/>
            
            <TextBlock x:Name="StatusText"
                       Text="Ready - Click button to start rendering PDF page repeatedly"
                       FontSize="12"
                       VerticalAlignment="Center"
                       Foreground="Gray"/>
        </StackPanel>
        
        <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto">
            <Image x:Name="PdfImage"
                   Stretch="None"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </ScrollViewer>
    </DockPanel>
    
</Window>

<Window x:Class="WpfApp.WpfAppMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="WpfApp" Height="450" Width="800">
    <Grid MouseDown="Grid_MouseDown" Background="AliceBlue">
        <StackPanel Orientation="Horizontal" Background="Aquamarine" Height="30" VerticalAlignment="Top">
            <TextBlock Text="{Binding TouchCount}"/>
        </StackPanel>

    </Grid>
</Window>
